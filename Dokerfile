FROM python:3.9-slim

# 크롬 브라우저 설치
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    chromium \
    && rm -rf /var/lib/apt/lists/*

# Python 라이브러리 설치
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# 애플리케이션 파일 복사
COPY . /app

# 작업 디렉토리 설정
WORKDIR /app

# 컨테이너 실행 시 실행할 명령
CMD ["python3", "crawler.py"]